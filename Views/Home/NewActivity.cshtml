@model MeetUp
<link rel="stylesheet" href="~/css/NewActivity.css"/>
<link href="https://fonts.googleapis.com/css2?family=Merriweather&family=Playfair+Display:wght@500&display=swap" rel="stylesheet">

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom text-light box-shadow mb-3">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Chicago Connection</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/logout">Logout</a>
                        </li>
                        @if(ViewBag.User.Admin == true) 
                {
                    <li class="nav-item">
                    <a href="/Admin/Manage" class="nav-link text-light">Admin Page</a>
                    </li>
                }
                    </ul>
                </div>
            </div>
        </nav>
<div class="container">
<div class="card">
    <div class="card-header">Plan a hang!</div>
    <div class="card-body">
        <form action="/activity/create" method="post">
        <div class="form-group">
                    <label>Title:</label>
                    <input asp-for="Title" class="form-control">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Date:</label>
                    <input asp-for="Date" class="form-control">
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Duration:</label>
                    <input asp-for="DurationTime" class="form-control">
                    <span asp-validation-for="DurationTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <select id="Duration" name="Duration">
                        <option value="Hours">Hours</option> 
                        <option value="Minutes">Minutes</option> 
                        <option value="Days">Days</option> 
                        </select>
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Description:</label>
                    <textarea asp-for="Description" class="form-control"> </textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                    <div class="form-group">
                    <label>Image:</label>
                    <input asp-for="ActImg" class="form-control">
                </div>
                <input type="submit" value="Create Activity" class="btn">
            </form>
        </div>
    </div>